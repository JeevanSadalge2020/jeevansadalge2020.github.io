  <body>
    <!-- HEADER -->
<%- include('partials/header.ejs')  %> 
    <main>
      <!-- SHOWCASE -->
      <section class="showcase">
        <h2 class="showcase__heading">Hospitals in <span>Delhi</span></h2>
      </section>

      <!-- SORT BY -->
